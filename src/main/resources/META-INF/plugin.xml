<idea-plugin>
    <id>com.copypaste</id>
    <name>Copypaste</name>
    <vendor/>

    <module-components>
        <component>
            <implementation-class>com.copypaste.InitModuleComponent</implementation-class>
        </component>
    </module-components>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.copypaste.ASTInfoMessageAction"
                class="com.copypaste.ASTInfoMessageAction"
                text="Build AST"
                description="Plugin's message with AST of selected code">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt A"/>
        </action>
    </actions>

</idea-plugin>